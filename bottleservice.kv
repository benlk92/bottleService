<ProgressPopup>:
    id:progressPop 
    title: "Drink Progress"
    size_hint: None, None
    size: 400,300
    pbValue: 0
    instructionsText: ""
    manager: None
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Progress: {}%'.format(int(pb.value))
            size_hint_y: None
            height: '40dp'

        ProgressBar:
            id: pb
            size_hint_y: None
            height: '40dp'
            value: root.pbValue

        Button:
            id: instructions
            text: progressPop.instructionsText
            halign: "center"
            on_press: 
                if pb.value == 100: progressPop.manager.current = "One"
            on_press: 
                if pb.value == 100:progressPop.dismiss()



<CountPopup>:
    id:countPop 
    title: "Just one?"
    size_hint: None, None
    size: 400,200
    manager: None
    BoxLayout:
        textTest: 'countLayout'
        orientation: 'vertical'

        BoxLayout:

            Button:
                background_color: (0,0,0,0)
                background_normal: ''
                on_press: 
                    if int(drinkCount.text[0]) > 2: drinkCount.text = (str(int(drinkCount.text[0]) - 1) + " Drinks")
                    elif int(drinkCount.text[0]) == 2: drinkCount.text = (str(int(drinkCount.text[0]) - 1) + " Drink")



                Image:
                    source: 'data/icons/minus.png'
                    y: ((2 * self.parent.y + self.parent.height) / 2) - (self.height / 2)
                    x: ((2 * self.parent.x + self.parent.width) / 2) - (self.width / 2)
                    size_hint_y: None
                    size_hint_x: None
                    height: 20
                    width: 20

            Label:
                id: drinkCount
                size_hint_x: None
                width: "40dp"
                halign: "center"
                text: "1 Drink"

            Button:
                background_color: (0,0,0,0)
                background_normal: ''
                on_press: if int(drinkCount.text[0]) < 9: drinkCount.text = (str(int(drinkCount.text[0]) + 1) + " Drinks")


                Image:
                    source: 'data/icons/plus2.png'
                    y: ((2 * self.parent.y + self.parent.height) / 2) - (self.height / 2)
                    x: ((2 * self.parent.x + self.parent.width) / 2) - (self.width / 2)
                    size_hint_y: None
                    size_hint_x: None
                    height: 20
                    width: 20

        Button:
            id: countButton
            textTest: "button"
            text: "Pour Drinks!"
            on_press: countPop.dismiss()
            count: drinkCount.text


